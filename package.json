{
  "private": true,
  "name": "devvit-svelte-template",
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "postinstall": "bun run build",
    "build": "vite build",
    "deploy": "bun run build && devvit upload",
    "dev": "concurrently -k -p \"[{name}]\" -n \"BUILD,DEVVIT\" -c \"blue,magenta\" \"vite build --watch\" \"dotenv -e .env -- devvit playtest\"",
    "dev:devvit": "dotenv -e .env -- devvit playtest",
    "login": "devvit login",
    "check": "svelte-check --tsconfig ./src/client/tsconfig.json",
    "launch": "bun run build && bun run deploy && devvit publish",
    "type-check": "tsc --build",
    "test": "npm test"
  },
  "dependencies": {
    "@devvit/web": "0.12.12",
    "@hono/node-server": "^1.19.9",
    "@tailwindcss/vite": "^4.2.0",
    "devvit": "0.12.12",
    "hono": "^4.11.10",
    "tailwindcss": "^4.2.0"
  },
  "devDependencies": {
    "@devvit/start": "0.12.12",
    "@sveltejs/vite-plugin-svelte": "^6.2.4",
    "@types/node": "^25.3.0",
    "concurrently": "^9.2.1",
    "dotenv-cli": "^11.0.0",
    "svelte": "^5.53.0",
    "svelte-check": "^4.4.1",
    "typescript": "^5.9.3",
    "vite": "8.0.0-beta.15"
  }
}