{
  "$schema": "https://developers.reddit.com/schema/config-file.v1.json",
  "name": "unlock-game",
  "post": {
    "dir": "dist/client",
    "entrypoints": {
      "default": {
        "entry": "splash.html",
        "height": "regular",
        "inline": true
      },
      "game": {
        "entry": "index.html",
        "height": "tall"
      }
    }
  },
  "server": {
    "dir": "dist/server",
    "entry": "index.cjs"
  },
  "menu": {
    "items": [
      {
        "label": "Create a TurnIt puzzle",
        "description": "Create a new word lock puzzle",
        "location": "subreddit",
        "forUserType": "moderator",
        "endpoint": "/internal/menu/post-create"
      }
    ]
  },
  "triggers": {
    "onAppInstall": "/internal/on-app-install"
  },
  "scheduler": {
    "tasks": {
      "daily-puzzle": {
        "endpoint": "/internal/scheduler/daily-puzzle",
        "cron": "0 12 * * *"
      }
    }
  },
  "dev": {
    "subreddit": "turnit"
  }
}